<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="invoice_order_line_form_inherited" model="ir.ui.view">
        <field name="name">account.line.form.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="after">
                <field name="lot_ids" string="Lot ID" widget="many2many_tags" 
              groups="lots_expiry_date.group_show_lots_expiry_date" optional="hide"
/>
                <field name="expiry_date_of_end_life_date" string="Expiry Date"                    
                   groups="lots_expiry_date.group_show_lots_expiry_date" optional="hide"
/>
            </xpath>
        </field>
        
    </record>


</odoo>